		<main
			role="main" class="mb-xxl-5 pt-5">
			{# si le block carousel est défini #}
			{% if block ('carousel') is defined %}
				<div id="carouselExampleTouch" class="carousel slide" data-mdb-touch="false">
					<div class="carousel-indicators">
						{% for key,item in carousels %}
							<button type="button" data-mdb-target="#carouselExampleTouch" data-mdb-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %} aria-current="true"></button>
						{% endfor %}
					</div>

					<div class="carousel-inner">
						{% for key,item in carousels %}
							<div class="carousel-item {% if key == 0 %}active{% endif %}">
								<div class="overlay"></div>
								<img class="first-slide" src="{{ asset('uploads/' ~ item.illustration) }}" alt="{{ item.name }}">
								<div class="carousel-caption d-none d-md-block">
									<h1 class="text-start text-uppercase">{{ item.name }}</h1>
									<p class="text-start">{{ item.description }}</p>
									<p class="text-start">
										<a class="btn btn-lg btn-primary" href="{{ item.bntUrl }}" role="button">{{ item.btnTitle }}</a>
									</p>
								</div>
							</div>
						{% endfor %}
					</div>

					<button class="carousel-control-prev" type="button" data-mdb-target="#carouselExampleTouch" data-mdb-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>

					<button class="carousel-control-next" type="button" data-mdb-target="#carouselExampleTouch" data-mdb-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>

				</div>
			{% endif %}

			{# si le block carousel n'est pas défini, alors ajoute un margin-top de 5 #}
			<div class="w3-container {% if block('carousel') is not defined %}mt-5{% endif %}" style="margin-top: 100px;"> {% block body %}{% endblock %}
